---
layout: layouts/post.njk
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slugify }}/index.html"
paper:
  buttons: []
  katex: false
---
<h1>Tag: {{ tag }}</h1>
{% for post in collections.posts %}
  {% if post.data.tags and (tag in post.data.tags) %}
  <p><a href="{{ post.url }}">{{ post.data.title }}</a><br><small><time datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time></small></p>
  {% endif %}
{% endfor %}
